<input class="inputNumber" placeholder="请输入要查询的订单号" bindinput="bindkeyInput" type="text"/>
<button type="warn" class="number-select" value="{{inputValue}}" bind:tap="select_btn">查询</button>
<button type="warn" class="select-all" value="{{inputValue}}" bind:tap="select_all">展示所有信息</button>
<view>
    <block wx:for="{{allItems}}" wx:for-item="item">
        <text class="showContent">{{item.customer_no}}     {{item.customer_nane}}     {{item.sale_order}}</text>
    </block>
</view>
